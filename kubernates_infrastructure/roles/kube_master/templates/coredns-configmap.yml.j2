apiVersion: v1
kind: ConfigMap
metadata:
  name: coredns
  namespace: kube-system
data:
  Corefile: |
    .:53 {
        errors
        health {
           lameduck 5s
        }
        ready
        kubernetes cluster.local in-addr.arpa ip6.arpa {
           pods insecure
           fallthrough in-addr.arpa ip6.arpa
           ttl 30
        }
        prometheus :9153
        {% if dns_service_ip is defined %}
        forward . {{ dns_service_ip }} {
        {% else %}
        forward . /etc/resolv.conf {
        {% endif %}
           max_concurrent 1000
        }
        cache 30
        loop
        reload
        loadbalance
    }
